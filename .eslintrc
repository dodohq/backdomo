{
  "extends": ["google", "prettier"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "allowImportExportEverywhere": true
  },
  "rules": {
    "prettier/prettier": "warn",
    "no-console": "warn",
    "object-curly-spacing": 0,
    "new-cap": "warn",
    "max-len": ["warn", { "code": 80, "ignoreUrls": true }],
    "curly": ["error", "multi-line"]
  },
  "globals": {
    "Promise": true,
    "process": true
  }
}
